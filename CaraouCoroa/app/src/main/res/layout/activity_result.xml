<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jesus.jeferson.caraoucoroa.ResultActivity">

    <android.support.constraint.Guideline
        android:id="@+id/hGuide20pc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.2" />

    <android.support.constraint.Guideline
        android:id="@+id/hGuide70pc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.7" />

    <ImageView
        android:id="@+id/imgResultado"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:contentDescription="Logotipo App"
        app:layout_constraintBottom_toTopOf="@+id/btnVoltar"
        app:layout_constraintEnd_toStartOf="@+id/vGuide20pc"
        app:layout_constraintStart_toStartOf="@+id/vGuide80pc"
        app:layout_constraintTop_toTopOf="@+id/hGuide20pc"
        app:srcCompat="@drawable/moeda_cara" />

    <ImageButton
        android:id="@+id/btnVoltar"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:background="#a0ffffff"
        android:contentDescription="BotÃ£o jogar"
        android:padding="0dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/hGuide70pc"
        app:layout_constraintEnd_toStartOf="@+id/vGuide20pc"
        app:layout_constraintStart_toStartOf="@+id/vGuide80pc"
        app:layout_constraintTop_toBottomOf="@+id/imgResultado"
        app:srcCompat="@drawable/botao_voltar" />

    <android.support.constraint.Guideline
        android:id="@+id/vGuide20pc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.85" />

    <android.support.constraint.Guideline
        android:id="@+id/vGuide80pc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.15" />

</android.support.constraint.ConstraintLayout>
